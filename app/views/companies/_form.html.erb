<%= error_messages_for :company %>
      
  <div>
    <label for="clientFormName"><%= t('name') %>: <span class="label_required">*</span></label>
    <%= text_field 'company', 'name', :id => 'clientFormName' %>
  </div>
  
  <div>
    <label for="clientFormTimezone"><%= t('timezone') %>: <span class="label_required">*</span></label>
    <%= time_zone_select 'company', 'time_zone', nil, {}, {:id => 'clientFormTimezone', :class => 'long'} %>
  </div>
  
  <fieldset>
    <legend><%= t('contact_online') %></legend>
    
    <div>
      <label for="clientFormEmail"><%= t('email_address') %>:</label>
      <%= text_field 'company', 'email', :id => 'clientFormEmail' %>
    </div>
    
    <div>
      <label for="clientFormHomepage"><%= t('homepage') %>:</label>
      <%= text_field 'company', 'homepage', :id => 'clientFormHomepage' %>
    </div>
  </fieldset>

  <fieldset>
    <legend><%= t('phone_numbers') %></legend>
    
    <div>
      <label for="clientFormPhoneNumber"><%= t('phone_number') %>:</label>
      <%= text_field 'company', 'phone_number', :id => 'clientFormPhoneNumber' %>
    </div>
    
    <div>
      <label for="clientFormFaxNumber"><%= t('fax_number') %>:</label>
      <%= text_field 'company', 'fax_number', :id => 'clientFormFaxNumber' %>
    </div>
    
  </fieldset>

  <fieldset>
    <legend><%= t('address') %></legend>
    
    <div>
      <label for="clientFormAddress"><%= t('address') %>:</label>
      <%= text_field 'company', 'address', :id => 'clientFormAddress' %>
    </div>
    
    <div>
      <label for="clientFormAddress2"><%= I18n.t('address_2') %>:</label>
      <%= text_field 'company', 'address2', :id => 'clientFormAddress2' %>
    </div>
    
    <div>
      <label for="clientFormCity"><%= t('city') %>:</label>
      <%= text_field 'company', 'city', :id => 'clientFormCity' %>
    </div>
    
    <div>
      <label for="clientFormState"><%= t('state') %>:</label>
      <%= text_field 'company', 'state', :id => 'clientFormState' %>
    </div>
    
    <div>
      <label for="clientFormZipcode"><%= t('zipcode') %>:</label>
      <%= text_field 'company', 'zipcode', :id => 'clientFormZipcode' %>
    </div>
    
    <div>
      <label for="clientFormCountry"><%= t('country') %>:</label>
      <%= text_field 'company', 'country', :id => 'clientFormCountry', :limit => 100 %>
    </div>
    
  </fieldset>
