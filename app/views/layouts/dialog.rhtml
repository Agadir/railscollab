<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html>
  <head>
    <title><%= h @page_title %></title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <%= stylesheet_link_tag 'dialog' %>
	<%= javascript_include_tag :defaults %>
  </head>
  <body>
    <div id="dialog">
      <h1><%= h @page_title %></h1>
<% if not flash[:flash_success].nil? %>
          <div id="success" onclick="this.style.display = 'none'"><%= flash[:flash_success] %></div>
<% end %>
<% if not flash[:flash_error].nil? %>
          <div id="error" onclick="this.style.display = 'none'"><%= flash[:flash_error] %></div>
<% end %>
<%= yield %>
    </div>
  </body>
</html>
