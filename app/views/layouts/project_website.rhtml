<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html>
  <head>
  	<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <% if not @active_project.nil? %>
    <title><%= h @active_project.name %> - <%= @page_title %> @ <%= h Company.owner.name %></title>
    <% else %>
    <title><%= h @page_title %> @ <%= h Company.owner.name %></title>
    <% end %>
    
	<%= stylesheet_link_tag 'project_website' %>
	<% if not @additional_stylesheets.nil?
	  @additional_stylesheets.each do |ss| -%>
	  <%= stylesheet_link_tag ss %>
	  <% end %>
	<% end %>
	<%= javascript_include_tag :defaults %>
<!-- head needs to go here? -->
  </head>
  <body id="body">
<%= render :partial => 'system_notices', :collection => system_notices %>
    <div id="wrapper">
      
      <!-- header -->
      <div id="headerWrapper">
        <div id="header">
          <h1><%= link_to (h @active_project.name), :controller => 'project', :action => 'overview', :id => @active_project.id %></h1>
          <div id="userboxWrapper"><%= render :partial => 'layouts/user_box', :locals => {:user => @logged_user, :projects => @active_projects} %></div>
        </div>
      </div>
      <!-- /header -->
      
      <div id="tabsWrapper">
        <div id="tabs">
<% if not @tabbed_navigation_items.nil? %>
          <ul>
<% @tabbed_navigation_items.each do |item| -%>
            <li id="<%= "item_#{item[:id]}" %>" <% if item[:selected] %> class='active'<% end %>>
            <a href="<%= item[:url] %>"><%= item[:title] %></a>
            </li>
<% end %>
          </ul>
<% end %>
        </div>
      </div>
      
      <div id="crumbsWrapper">
        <div id="crumbsBlock">
          <div id="crumbs">
<% if not @bread_crumbs.nil? %>
            <ul>
<% @bread_crumbs.each do |crumb| -%>
<% if crumb[:url] %>
              <li>&raquo; <a href="<%= crumb[:url] %>"><%= h crumb[:title] %></a></li>
<% else %>
              <li>&raquo; <span><%= h crumb[:title] %></span></li>
<% end %>
<% end %>
            </ul>
<% end %>
          </div>
          <div id="searchBox">
            <%= form_tag :controller => 'project', :action => 'search' %>
              <div>
<%
  @search_field_default_value = "Search..."
  @search_field_attrs = {
	  :onfocus => "if (value == '#{@search_field_default_value}' value=''",
		:onblur => "if (value == '#{@search_field_default_value}' value=''"}
%>
                <%= text_field_tag 'search_for', (h @last_search), @search_field_attrs %><button type="submit"><%= "Go" %></button>
              </div>
            </form>
          </div>
        </div>
      </div>
      
      <!-- content wrapper -->
      <div id="outerContentWrapper">
        <div id="innerContentWrapper">
<% if flash[:flash_success] %>
          <div id="success" onclick="this.style.display = 'none'"><%= h flash[:flash_success] %></div>
<% end %>
<% if flash[:flash_error] %>
          <div id="error" onclick="this.style.display = 'none'"><%= h flash[:flash_error] %></div>
<% end %>

          <h1 id="pageTitle"><%= @page_title %></h1>
          <div id="pageContent">
            <div id="content">
<% if not @page_actions.nil? %>
            <div id="page_actions">
              <ul>
<% @page_actions.each do |action| -%>
                <li><a href="<%= action[:url] %>"><%= h action[:title] %></a></li>
<% end %>
              </ul>
            </div>
<% end %>
              <!-- Content -->
              <%= yield %>
              <!-- /Content -->
            </div>
<% if not @content_for_sidebar.nil? %>
            <div id="sidebar"><%= render :partial => @content_for_sidebar, :locals => {:users => @online_users, :logged_user => @logged_user, :my_projects => @my_projects, :active_projects => @active_projects, :finished_projects => @finished_projects} %></div>
<% end %>
            <div class="clear"></div>
          </div>
        </div>
        
        <!--Footer -->
        <div id="footer">
          <div id="copy">
<% if not Company.owner.homepage.nil? %>
            <a href="<%= Company.owner.homepage %>"><%= Company.owner.name %></a>
<% else %>
            <%= Company.owner.name %>
<% end %>
          </div>
          <div id="productSignature"><%= product_signature %></div>
        </div>
      </div>
      <!-- /content wrapper -->
      
    </div>
  </body>
</html>