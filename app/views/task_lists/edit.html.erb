<%
  @page_title = :edit_task_list.l
  @tabbed_navigation_items = project_tabbed_navigation(:tasks)
  @bread_crumbs = project_crumbs(:edit_task_list, [{:title => :tasks, :url => task_lists_path}])
  
  @page_actions = []
  
  if ProjectTaskList.can_be_created_by(@logged_user, @active_project)
    @page_actions << {:title => :add_task_list, :url=> new_task_list_path}
  end
  
  @additional_stylesheets = ['project/task_list']
%>
<%= form_tag task_list_path(:id => @task_list.id), :method => :put %>
<%= render :partial => 'form' %>
    <button class="submit" type="submit"><%= :edit_task_list.l %></button>
</form>
